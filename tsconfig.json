{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@ds/*": ["packages/*/src"],
      "components/*": ["packages/design-system/src/components/*"]
    }
  },
  "include": ["packages/*/src"]
}
